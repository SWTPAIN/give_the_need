.container
  .row
    .col-md-10.col-md-offset-1
      =bootstrap_form_for @post, layout: :horizontal, label_col: 'col-sm-3', control_col: 'col-sm-6' do |f|
        %ul.nav.nav-tabs
          %li
            = link_to 'Recent Payments', admin_payments_path
          %li.active
            %a(href="") Add a New Video
        %br
        %fieldset
          = f.text_field :title, control_col: 'col-sm-4'
          = f.text_area :description, rows:8
          = f.file_field :main_photo, class: "form-control"
        %fieldset.actions.form-group
          .col-sm-6.col-md-offset-3
            %input(type="submit" value="Add Video" class="btn btn-default")
